@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<User> SignInManager

@{
    Layout = "_Session";
    ViewData["Title"] = "Log in";
}


<div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
<form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" class="form-layout">
                <p class="text-center mb30">Please sign in to your account</p>
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
                <div class="form-inputs">
                <input asp-for="Email" placeholder="Email" type="email" class="form-control input-lg" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Password" placeholder="Password" type="password" class="form-control input-lg" />
                <span asp-validation-for="Password" class="text-danger"></span>
                        <label>
                            <input asp-for="RememberMe" /><label asp-for="RememberMe"></label>
                        </label>
                </div>
                <button class="btn btn-success btn-block btn-lg mb15" type="submit">
                  <span>Sign in</span>
                </button>
                <p>
        <a asp-action="ForgotPassword">I forgot my password?</a>
        <a asp-action="Register">Register a new membership</a>
                </p>
              </form>
            </div>

@section styles {
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
